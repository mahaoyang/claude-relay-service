{
  "version": 2,
  "name": "claude-relay-service",
  "buildCommand": "npm run build",
  "outputDirectory": ".",
  "builds": [
    {
      "src": "api/serverless.js",
      "use": "@vercel/node"
    },
    {
      "src": "web/admin-spa/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/admin-next/assets/(.*)",
      "dest": "/web/admin-spa/dist/assets/$1"
    },
    {
      "src": "/admin-next(/.*)?",
      "dest": "/web/admin-spa/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/api/serverless.js"
    }
  ]
}
